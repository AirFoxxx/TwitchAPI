@using TwitchAPI.ViewModels
@model UserScopes
@{
    ViewData["Title"] = "Privilege setup";
}

<div class="text-center">

    <div class="row">
        <div class="col-md-8 offset-2">
            <p>
                <h4>Please select all scope parameters to give this app access to:</h4>
            </p>

            <form asp-action="Registration" asp-controller="Home">
                <div asp-validation-summary="All" class="text-danger"></div>

                @for (int i = 0; i < Model.ScopeList.Count; i++)
                {
                    <div class="container">
                        <div class="form-group">
                            <label class="form-check-label" for="@Model.ScopeList[i].Scope">
                                @Html.DisplayFor(m => m.ScopeList[i].Scope)
                            </label>
                            <span asp-validation-for="@Model.ScopeList[i].Scope" class="text-danger"></span>
                            <input asp-for="@Model.ScopeList[i].IsSelected" class="form-control" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <input type="submit" value="Submit to Twitch" class="btn btn-custom float-md-none" />
                </div>
            </form>
        </div>
    </div>
</div>
